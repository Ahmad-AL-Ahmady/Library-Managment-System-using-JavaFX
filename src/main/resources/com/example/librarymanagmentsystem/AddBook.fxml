<AnchorPane prefHeight="505.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagmentsystem.AddBookController">
   <children>
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="62.0" prefWidth="182.0" text="BookGuru">
         <font>
            <Font name="System Bold" size="37.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" green="0.029999999329447746" blue="0.029999999329447746" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color green="0.6666666865348816" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Button fx:id="addBTN" layoutX="267.0" layoutY="340.0" mnemonicParsing="false" onAction="#addBook" prefHeight="36.0" prefWidth="86.0" style="-fx-background-radius: 30px;" text="Add" />
      <Button fx:id="backBTN" layoutX="451.0" layoutY="340.0" mnemonicParsing="false" onAction="#backButton" prefHeight="36.0" prefWidth="86.0" style="-fx-background-radius: 30px;" text="Back" />
      <Label layoutX="239.0" layoutY="130.0" text="Enter the details of the new book  :">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="163.0" layoutY="169.0" prefHeight="18.0" prefWidth="86.0" text="Book Name" />
      <TextField fx:id="nameTF" layoutX="257.0" layoutY="165.0" prefHeight="26.0" prefWidth="290.0" promptText="Enter book name" style="-fx-background-radius: 30px;" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="163.0" layoutY="210.0" prefHeight="18.0" prefWidth="86.0" text="Category" />
      <TextField fx:id="categoryTF" layoutX="257.0" layoutY="206.0" prefHeight="26.0" prefWidth="290.0" promptText="Enter category" style="-fx-background-radius: 30px;" />
      <Label alignment="CENTER" layoutX="163.0" layoutY="255.0" prefHeight="18.0" prefWidth="86.0" text="Author" />
      <TextField fx:id="authorTF" layoutX="257.0" layoutY="251.0" prefHeight="26.0" prefWidth="290.0" promptText="Enter author's name" style="-fx-background-radius: 30px;" />
      <Label alignment="CENTER" layoutX="163.0" layoutY="295.0" prefHeight="18.0" prefWidth="86.0" text="Copies" />
      <TextField fx:id="copiesTF" layoutX="257.0" layoutY="291.0" prefHeight="26.0" prefWidth="290.0" promptText="Enter number of copies" style="-fx-background-radius: 30px;" />
      <ImageView fitHeight="50.0" fitWidth="43.0" layoutX="196.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/library.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
